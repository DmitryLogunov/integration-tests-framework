{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["ES2015"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": ".",
    "typeRoots": [ "./node_modules/@types" ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "node_modules/@types",
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
